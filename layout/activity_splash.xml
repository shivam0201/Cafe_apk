<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash_activity"
    android:background="@color/wakeup_bg">

    <ImageView
        android:id="@+id/wakeup_btn"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true"
        android:src="@drawable/wakeup"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coffee World"
        android:layout_below="@+id/wakeup_btn"
        android:textColor="@color/btn_end"
        android:layout_centerHorizontal="true"
        android:textSize="32dp"/>

</RelativeLayout>